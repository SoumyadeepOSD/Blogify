<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs')%>
    <title>Add New Blog</title>
</head>
<body>
    <%- include('./partials/nav.ejs')%> 

    <div class="container mt-3">
       <form action="/blog" method="post">
        <!-- Image -->
        <div class="mb-3">
            <label for="coverImage" class="coverImage">Cover Image</label>
            <input 
                type="file" 
                class="form-control" 
                id="coverImage" 
                name="coverImage" 
                aria-describedby="coverImage"
            />
        </div>
        <!-- title -->
        <div class="mb-3">
            <label for="title" class="title">Title</label>
            <input 
                type="text" 
                class="form-control" 
                id="title" 
                name="title" 
                aria-describedby="title"
            />
        </div>
        <!-- body -->
        <div class="mb-3">
            <label for="body" class="body">Body</label>
            <textarea type="text" class="form-control" id="body" name="body"></textarea>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary">Submit</button>
        </div>
       </form> 
    </div>

    <%- include('./partials/scripts.ejs')%>
</body>
</html>